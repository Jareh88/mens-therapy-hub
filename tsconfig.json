{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@frontend/*": ["./src/app/(frontend)/*"],
      "@payload-config": ["./src/payload.config.ts"]
    },
    "types": ["node"]
  },
  "include": [
    "src",
    "src/**/*",
    "src/types/**/*",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "jest.setup.ts",
    "testMocks/**/*.ts*"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx", "testMocks"]
}
